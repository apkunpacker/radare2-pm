R2PM_BEGIN

R2PM_GIT "https://github.com/radareorg/r2ai"
R2PM_DESC "run a local language model integrated with radare2"

R2PM_INSTALL() {
	echo "RUN THIS LINE IF IN NEED FOR DEPS:"
	echo "pip3 install rich inquirer python-dotenv openai litellm tokentrim"
	make user-install
}

R2PM_UNINSTALL() {
	make user-uninstall
}

R2PM_END
