R2PM_BEGIN

R2PM_GIT "https://github.com/radareorg/radare2-extras"
R2PM_DESC "run a local language model integrated with radare2"

R2PM_INSTALL() {
	echo "RUN IF IN NEED FOR DEPS:"
	echo "pip3 install rich inquirer python-dotenv openai litellm tokentrim"
	make -C "${PWD}/r2ai/local"
	ln -fs "${PWD}/r2ai/local/main.py" "${R2PM_BINDIR}/r2ai" || exit 1
}

R2PM_UNINSTALL() {
	rm -f "${R2PM_BINDIR}/r2ai"
}

R2PM_END
